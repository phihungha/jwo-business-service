{
  "name": "jwo-business-service",
  "version": "0.0.1",
  "description": "Business service backend for Just-Walk-Out Shopping System",
  "author": "Ha Phi Hung",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write --ignore-unknown .",
    "format-check": "prettier --check .",
    "lint-fix": "eslint --fix --cache .",
    "lint": "eslint .",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "db:push": "dotenv -e .dev.env -- prisma db push",
    "db:seed": "dotenv -e .dev.env -- prisma db seed",
    "migrate:dev": "dotenv -e .dev.env -- npx prisma migrate dev",
    "migrate:dev:create": "dotenv -e .dev.env -- npx prisma migrate dev --create-only",
    "migrate:reset": "dotenv -e .dev.env -- npx prisma migrate reset",
    "migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "dotenv -e .dev.env -- npx prisma generate",
    "prisma:studio": "dotenv -e .dev.env -- npx prisma studio",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.3.9",
    "@nestjs/websockets": "^10.3.9",
    "@prisma/client": "^5.15.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.0.0",
    "prisma": "^5.15.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --cache",
      "prettier --write"
    ],
    "*": "prettier --write --ignore-unknown"
  }
}
